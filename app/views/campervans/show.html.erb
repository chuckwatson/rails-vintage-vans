<div class="card-trip">
  <img src="<%= cl_image_path @campervan.photo.key %>">
  <div class="card-trip-infos">
    <div>
      <%=@campervan.title %>
      <p><%= @campervan.description %></p>
    </div>
    <a class="btn btn-ghost" href="#">Book now</a>
    <a class="btn btn-ghost" href="#">Add review</a>
    <h2 class="card-trip-pricing"><%=@campervan.price  %>Â£</h2>
  </div>
  <div class="write-review">
    <%= @campervan.reviews.each do |review| %>
    <%= review.rating %>
    <% end %>
  </div>
  <div class="booking-form">
    <%= simple_form_for [@campervan, @booking] do |f| %>
      <%= f.input :start_date, html5: true %>
      <%= f.input :end_date, html5: true %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
