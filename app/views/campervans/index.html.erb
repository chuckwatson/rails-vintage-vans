<div class="page-title">
  <h1>Pick a ride</h1>
</div>


<div class="flex-container">
  <div class="row">
     <% @campervans.each do |campervan| %>
       <%= link_to campervan_path(campervan) do %>
<!-- <div class ="link-card"> -->
        <div class="col-md-4" style="margin-bottom:10px" "margin-left:10px";>
          <img src="<%= cl_image_path campervan.photo.key if campervan.photo.attached? %>" alt="">
            <h4 class="card-title"><%= campervan.title%></h4>
              <p class="card-description"><%= campervan.description %></p>
                <p class="card-details"><%= campervan.price %></p>
                 <%= link_to "", campervan_path(campervan),
        method: :delete,
        data: { confirm: "Are you sure?" }, class: 'far fa-trash-alt'%>
       <% end %>
        </div>
      <% end %>
   </div>

 </div>



