<div class="page-title">
<h1>Add your camper</h1>
</div>

<div class="form-container">
  <div class="form-group">
      <%= simple_form_for @campervan do |f| %>
      <%= f.label :title, "Title" %>
      <%= f.text_field :title,:style=> 'width: 350px' %>
  </div>
<div class="form-group">
      <%= f.label :description, "Description" %>
      <%= f.text_area :description, :style=> 'width: 350px' %>
</div>
<div class="form-group">
  <%= f.input :model, as: :string, :style=> 'width: 350px' %>
</div>
<div class="form-group">
  <%= f.input :year, as: :string, :style=> 'width: 350px' %>
</div>
<div class="form-group">
  <%= f.input :fuel_type, as: :string, :style=> 'width: 350px' %>
</div>
<div class="form-group">
   <%= f.label :address, "Address" %>
   <%= f.text_field :address,:style=> 'width: 350px' %>
</div>
<div class="form-group">
  <%= f.input :price, as: :string %>
</div>
<div class="form-group">
    <%= f.input :photo, as: :file %>
  </div>
    <div class=form-submit>
        <%= f.button :submit %>
         <% end %>
    </div>
</div>

<br>

<div style="text-align:center;">
  <%= link_to "Home", campervans_path, class: "btn btn-flat" %>
</div>
