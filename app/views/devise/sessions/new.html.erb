
<div class="banner">
  <div class="banner-content text-center">
    <link href="https://fonts.googleapis.com/css?family=Yesteryear&display=swap" rel="stylesheet">
    <h1>Vintage Vans</h1>
    <p>Something something something roadtrip...</p>
    <%= link_to "Hop in", campervans_path, class: "btn btn-lg btn-primary" %>


<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", :style=> 'width: 350px'} %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", :style=> 'width: 350px'} %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-flat" %>
  </div>
<% end %>

<br>

  <div>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-ghost" %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-ghost" %>
  </div>
</div>

</div>

