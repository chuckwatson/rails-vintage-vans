<div class="container">
<h1 align="center">Log in</h1>
<h2 align="center">Log in to Vintage Vans Below</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-flat" %>
  </div>
<% end %>

<br>

  <div>
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-ghost" %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-ghost" %>
  </div>

</div>
