<div class="banner" >
  <div class="banner-content text-center" align="center">
<div class="align-container-center">
</div>
<br>
<div class="add-form-colour" >
  <h1 class="title-add">Sign Up</h1>
  <div class="form-container" >


    <%= link_to "Hop in", campervans_path, class: "btn btn-lg btn-primary" %>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
      <%= f.input :avatar, as: :file %>
      <%= f.input :first_name,
      required: true,
      autofocus: true,
      input_html: { autocomplete: "first name", :style=> 'width: 350px'} %>
      <%= f.input :last_name,
      required: true,
      autofocus: true,
      input_html: { autocomplete: "surname", :style=> 'width: 350px'}%>
      <%= f.input :email,
      required: true,
      autofocus: true,
      input_html: { autocomplete: "email", :style=> 'width: 350px'}%>
      <%= f.input :password,
      required: true,

      input_html: { autocomplete: "new-password", :style=> 'width: 350px'} %>
      <%= f.input :password_confirmation,
      required: true,
      input_html: { autocomplete: "new-password", :style=> 'width: 350px'} %>
      <div class="form-actions-signup">
        <%= f.button :submit, "Sign Up", class: "btn btn-lg btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>


